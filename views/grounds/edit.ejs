	<% include ../partials/header %>


	<div style="width: 30%; margin: 35px auto">
	<div class="container test rounded" id="newform">
	<h1>Edit</h1>
	<form  action="/grounds/<%=ground._id%>?_method=PUT" method="POST">
	  <div class="form-group">
	    <label for="name">Name</label>
	    <input type="text" class="form-control" id="name" name="name" value="<%=ground.name %>">
	  </div>
	  <div class="form-group">
	    <label for="image">Image-Url:</label>
	    <input type="text" class="form-control" id="image" name="image"  value="<%=ground.image %>">
	  </div>
	  <div class="form-group">
	    <label for="description">Description:</label>
	    <input type="text" class="form-control" id="description" name="description"  value="<%=ground.description %>">
	  </div>
	  <button type="submit" class="btn btn-warning">Submit</button>
	</form>
	</div>
	<a href="/grounds">Back</a>

	</div>
	<% include ../partials/footer %>