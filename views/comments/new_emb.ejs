
		<form method="POST" action="/grounds/<%=ground._id %>/comments" class="rounded" id="newCommentForm">
			<div class="form-group">
			  <label for="name">Author</label>
			  <input type="text" class="form-control" id="author" placeholder="Enter author" name="comment[author]">
			</div>
			<div class="form-group">
			  <label for="description">Text:</label>
			  <input type="text" class="form-control" id="text" name="comment[text]" placeholder="text">
			</div>
			<button type="submit" class="btn btn-primary">Add comment</button>
		</form>
